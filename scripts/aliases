#!/bin/bash

# Add this code to the bottom of your .bash_profile file in your home directory.
# source path/to/alwaysforward/scripts/.aliases

# Always Forward App Aliases
SCRIPT_DIR=$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )
ALWAYS_FORWARD_DIRECTORY="$(dirname "$SCRIPT_DIR")"

# This command runs on every terminal load
( cd $ALWAYS_FORWARD_DIRECTORY ; php artisan app:terminal)

# App Commands
alias fw="cd $ALWAYS_FORWARD_DIRECTORY"
alias forward="$ALWAYS_FORWARD_DIRECTORY/scripts/start.sh"
alias taskcli="( cd $ALWAYS_FORWARD_DIRECTORY ; php artisan app:cli )"
alias openfwdb="( open $ALWAYS_FORWARD_DIRECTORY/database/database.sqlite )" # TablePlus command
alias board="$ALWAYS_FORWARD_DIRECTORY/scripts/board.sh"

# Supervisor
alias fw-server="supervisorctl start fw-server:fw-server_00"
alias fw-stop="supervisorctl stop fw-server:fw-server_00"

# Goals
alias goal="( cd $ALWAYS_FORWARD_DIRECTORY ; cal; php artisan goals:new )"
alias goals="( cd $ALWAYS_FORWARD_DIRECTORY ; php artisan goals:show )"

# Tasks
alias task="( cd $ALWAYS_FORWARD_DIRECTORY ; cal; php artisan tasks:new )"
alias tasks="( cd $ALWAYS_FORWARD_DIRECTORY ; php artisan tasks:show )"
alias qt="( cd $ALWAYS_FORWARD_DIRECTORY ; cal; php artisan tasks:quick )" 

# Events
alias event="( cd $ALWAYS_FORWARD_DIRECTORY ; cal; php artisan life-event:new )"
alias events="( cd $ALWAYS_FORWARD_DIRECTORY ; php artisan life-events:show )"

# Life
alias t-="( cd $ALWAYS_FORWARD_DIRECTORY ; php artisan life:time )"